@model List<InventoryManagement.Application.Contract.Inventory.InventoryOprationViewModel>
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">سوابق گردش انبار</h4>
</div>

    <div class="modal-body">
        <table id="datatable" class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>تعداد</th>
                    <th>تاریخ</th>
                    <th>عملیات</th>
                    <th>موجودی فعلی</th>
                    <th>عملگر</th>
                    <th>توضیحات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr class="text-white @(i.Operation?"bg-success":"bg-danger")">
                        <td>@i.Id</td>
                        <td>@i.Count</td>
                        <td>@i.OprationDate</td>
                        <td>
                            @if (i.Operation)
                            {
                                <span>افزایش</span>
                            }
                            else
                            {
                                <span>کاهش</span>
                            }
                        </td>
                        <td>@i.CurrentCount</td>
                        <td>@i.Operator</td>
                        <td>@i.Description</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
    </div>