@page
@using _0_Framwork.Application
@model ServicesHost.Pages.CheckoutModel
@{
}
    <div class="breadcrumb-area section-space--half">
        <div class="container wide">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-wrapper breadcrumb-bg">
                        <div class="breadcrumb-content">
                            <h2 class="breadcrumb-content__title">تایید سبد خرید/پرداخت</h2>
                            <ul class="breadcrumb-content__page-map">
                                <li>
                                    <a href="index.html">صفحه اصلی</a>
                                </li>
                                <li class="active">تایید سبد خرید/پرداخت</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-content-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--=======  page wrapper  =======-->
                    <div class="page-wrapper">
                        <div class="page-content-wrapper">
                            <form action="#">
                                <div class="cart-table table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="pro-thumbnail">عکس</th>
                                                <th class="pro-thumbnail">محصول</th>
                                                <th class="pro-title">قیمت واحد</th>
                                                <th class="pro-price">تعداد</th>
                                                <th class="pro-quantity">مبلغ کل بدون تخفیف</th>
                                                <th class="pro-quantity">درصد تخفیف</th>
                                                <th class="pro-subtotal">مبلغ کل تخفیف</th>
                                                <th class="pro-remove">مبلغ پس از تخفیف</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var i in Model.Carts.Items)
                                        {
                                            <tr>
                                                <td class="pro-thumbnail">
                                                    <a href="single-product.html">
                                                        <img src="~/ProductPicture/@i.Picture" class="img-fluid"
                                                            alt="Product">
                                                    </a>
                                                </td>
                                                <td class="pro-title">
                                                    <a>@i.Name</a>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@i.UnitPrice.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@i.Count</span>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@i.TotalUnitPrice.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>@i.DiscountRate %</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>@i.DiscountAmount.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>@i.ItemPayAmount.ToMoney() تومان </span>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </form>

                            <div class="row">
                                <div class="col-lg-6 col-12 d-flex">
                                    <div class="cart-summary">
                                        <div class="cart-summary-wrap">
                                            <h4>خلاصه وضعیت فاکتور</h4>
                                            <p>مبلغ نهایی <span>@Model.Carts.TotalAmount.ToMoney() تومان</span></p>
                                            <p>مبلغ تخفیف <span>@Model.Carts.DiscountAmount.ToMoney() تومان</span></p>
                                            <h2>مبلغ قابل پرداخت <span>@Model.Carts.PayAmount.ToMoney() تومان</span></h2>
                                        </div>
                                        <div class="cart-summary-button">
                                            <a class="btn btn-dark text-white">پرداخت</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>